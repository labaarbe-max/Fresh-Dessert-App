# ================================================
# Fresh Dessert App - Environment Variables
# ================================================
# IMPORTANT: Ne JAMAIS commiter le fichier .env.local
# Copier ce fichier: cp .env.example .env.local
# ================================================

# ================================================
# DATABASE CONFIGURATION
# ================================================
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_NAME=fresh_dessert_app_db
DB_PORT=3306

# ================================================
# AUTHENTICATION & SECURITY
# ================================================
# JWT Secret (minimum 32 caractères recommandé)
# Expiration: 24 heures
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_change_in_production

# ================================================
# UPSTASH REDIS (Rate Limiting & Cache)
# ================================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# ================================================
# SERVER CONFIGURATION
# ================================================
PORT=3000
NODE_ENV=development

# CORS - Origines autorisées (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
